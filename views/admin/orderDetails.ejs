<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
        }

        .card-body {
            background-color: #fff;
        }

        .card-footer {
            background-color: #f1f1f1;
            text-align: center;
        }

        .btn-back {
            background-color: #007bff;
            color: #fff;
        }

        .btn-back:hover {
            background-color: #0056b3;
        }

        h5 {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .tracking-step {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .tracking-step .status {
            font-weight: bold;
        }

        .tracking-step .date {
            color: #6c757d;
        }

        .order-summary {
            background-color: #f8f9fa;
            padding: 10px;
            border-radius: 8px;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <h2 class="mb-4 text-center">Order Details</h2>

        <div class="card mb-4">
            <div class="card-header">
                <h4>Order ID: <%= order._id %></h4>
                <p><strong class="text-light">Status: <%= order.status %></strong></p>
            </div>

            <div class="card-body">
                <!-- User Details -->
                <div class="order-summary mb-4">
                    <h5>User Details</h5>
                    <p><strong>Name:</strong> <%= order.userId.name %></p>
                    <p><strong>Email:</strong> <%= order.userId.email %></p>
                    <p><strong>Phone:</strong> <%= order.userId.phone %></p>
                </div>

                <hr>

               <!-- Address Details -->
<% if (address) { %>
    <div class="order-summary mb-4">
        <h5>Address:</h5>
        <div class="tracking-step">
            <div>
                <strong>Address Type:</strong> <%= address.addressType %><br>
                <strong>Name:</strong> <%= address.name %><br>
                <strong>City:</strong> <%= address.city %><br>
                <strong>Landmark:</strong> <%= address.landMark %><br>
                <strong>State:</strong> <%= address.state %><br>
                <strong>Pincode:</strong> <%= address.pincode %><br>
                <strong>Phone:</strong> <%= address.phone %><br>
                <strong>Alternate Phone:</strong> <%= address.altPhone %><br>
            </div>
        </div>
    </div>
<% } else { %>
    <p>No address available for this order.</p>
<% } %>


                <hr>

                <!-- Product Details -->
                <div class="order-summary mb-4">
                    <h5>Ordered Products</h5>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Description</th>
                                <th>Color</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Toatal Price</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= order.productId.productName %><img class="img-fluid" src="/uploads/product-images/<%= order.productId.productImage[0] %>" alt="Product Image"></td>
                                <td><%= order.productId.category.name %></td>
                                <td><%= order.productId.description %> %></td>
                                <td><%=order.productId.color %></td>
                                <td> <%= order.quantity %></td>
                                <td><%= order.price %></td>
                                <td>₹<%= order.totalPrice %></td>
                                <td>
                                    <select class="order-status-dropdown" data-order-id="<%= order._id %>" data-current-status="<%= order.status %>">
                                        <option value="Order Placed" <%= order.status === 'Order Placed' ? 'selected' : '' %>>Pending</option>
                                        <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                        <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                        <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                        <option value="Out for Delivery" <%= order.status === 'Out for Delivery' ? 'selected' : '' %>>Out for Delivery</option>
                                        <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                    </select>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <hr>

                <!-- Payment Details -->
                <div class="order-summary mb-4">
                    <h5>Payment Details</h5>
                    <p><strong>Payment Method:</strong> <%= order.orderMethod %></p>
                    <p><strong>Total Amount:</strong> ₹<%= order.finalAmount %></p>
                </div>

                <hr>

                <!-- Tracking History -->
                <div class="order-summary mb-4">
                    <h5>Order Tracking</h5>
                    <ul class="list-group">
                        <% order.trackingHistory.forEach(entry => { %>
                            <li class="list-group-item">
                                <strong><%= entry.date %></strong> - <%= entry.status %>
                            </li>
                        <% }); %>
                    </ul>
                </div>

            </div>

            <div class="card-footer">
                <a href="/admin/orders" class="btn btn-back mt-3">Back to Orders</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".order-status-dropdown").forEach(dropdown => {
                dropdown.addEventListener("change", function () {
                    const orderId = this.getAttribute("data-order-id");
                    const currentStatus = this.getAttribute("data-current-status"); // Get the current status
                    const newStatus = this.value;
        
                    // Prevent changing from Delivered or Cancelled
                    if (currentStatus === "Delivered" || currentStatus === "Cancelled") {
                        Swal.fire({
                            title: "Action Not Allowed",
                            text: "You cannot change the status of a Delivered or Cancelled order.",
                            icon: "error"
                        });
                        this.value = currentStatus; // Reset dropdown to previous value
                        return;
                    }
        
                    // Show confirmation SweetAlert
                    Swal.fire({
                        title: "Are you sure?",
                        text: `Do you want to change the order status to ${newStatus}?`,
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Yes, change it!",
                        cancelButtonText: "No, cancel!"
                    }).then((result) => {
                        if (result.isConfirmed) {
                            // Send a request to update the order status
                            fetch("/admin/update-order-status", {
                                method: "POST",
                                headers: { "Content-Type": "application/json" },
                                body: JSON.stringify({ orderId, status: newStatus })
                            }).then(response => response.json()).then(data => {
                                if (data.success) {
                                    Swal.fire("Updated!", "Order status has been changed.", "success")
                                        .then(() => window.location.reload()); // Reload the page after success
                                } else {
                                    Swal.fire("Error", "Failed to update order status.", "error");
                                    this.value = currentStatus; // Reset dropdown to previous value
                                }
                            });
                        } else {
                            this.value = currentStatus; // Reset dropdown to previous value
                        }
                    });
                });
            });
        });   
    </script> 

</body>

</html>
