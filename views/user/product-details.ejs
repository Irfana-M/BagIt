<style>
    /* Scoped carousel styles */
    .zoom-container {
        overflow: hidden;
        position: relative;
    }
    .zoom-container img {
        transition: transform 0.3s ease;
        cursor: zoom-in;
    }
    .zoom-container:hover img {
        transform: scale(2);
    }
    .carousel-item img {
        background: #f8f9fa;
    }
    .carousel-indicators {
        bottom: -50px;
    }
    .carousel-indicators li {
        background-color: #777;
    }
    .img-thumbnail {
        transition: opacity 0.2s;
    }
    .img-thumbnail:hover {
        opacity: 0.8;
    }
    #product-carousel {
        margin-bottom: 50px;
        position: relative;
        height: 500px;
    }
    .carousel-inner {
        height: 500px;
    }
    .carousel-control-prev,
    .carousel-control-next {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.2);
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        margin: 0 10px;
    }
    .carousel-control-prev {
        left: 10px;
    }
    .carousel-control-next {
        right: 10px;
    }
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        width: 20px;
        height: 20px;
    }
</style>

