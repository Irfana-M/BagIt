    <script>
        // Function to handle increasing the quantity
        function increaseQuantity(productId, stock) {
            const quantityField = document.getElementById(`sst-${productId}`);
            let currentQuantity = parseInt(quantityField.value);
            
            if (currentQuantity < stock) {
                quantityField.value = currentQuantity + 1; // Increment the quantity
                updateCart(productId, quantityField.value); // Update the cart (You should call an API or make a request to update the cart)
            } else {
                // Use SweetAlert to notify the user about stock availability
                Swal.fire({
                    icon: 'warning',
                    title: 'Out of Stock',
                    text: 'Sorry, we\'ve run out of stock for this product.',
                    confirmButtonText: 'OK'
                });
            }
        }
    
        // Function to handle decreasing the quantity
        function decreaseQuantity(productId, stock) {
            const quantityField = document.getElementById(`sst-${productId}`);
            let currentQuantity = parseInt(quantityField.value);
            
            if (currentQuantity > 1) {
                quantityField.value = currentQuantity - 1; // Decrement the quantity
                updateCart(productId, quantityField.value); // Update the cart (You should call an API or make a request to update the cart)
            }
        }
    
        // Function to update the cart with the new quantity (you can use AJAX or form submission)
        function updateCart(productId, newQuantity) {
            // You can send the updated cart quantity to the server through AJAX
            console.log("Updated Cart:", productId, newQuantity);
    
            // For example, make an AJAX call to update the cart:
            fetch('/update-cart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    productId: productId,
                    quantity: newQuantity
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    console.log("Cart updated successfully");
                    // You can update the cart view here if necessary
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Failed to update cart',
                        text: 'Something went wrong while updating the cart.',
                        confirmButtonText: 'OK'
                    });
                }
            });
        }
    </script>
