                },
                theme: { color: "#3399cc" },
            };

            const rzp = new Razorpay(options);
            rzp.open();

        } catch (error) {
            console.error("Error in retrying Razorpay payment process:", error);
            swal.fire({
                title: "Error",
                text: "Something went wrong. Please try again later.",
                icon: "error",
            });
        }
    });
});
