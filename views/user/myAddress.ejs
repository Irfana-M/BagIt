    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>My Addresses</title>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
        <style>
            .address-card {
                border: 1px solid #dee2e6;
                border-radius: 8px;
                padding: 15px;
                margin-bottom: 15px;
                position: relative;
            }
            
            .remove-btn {
                position: absolute;
                right: 15px;
                top: 90%;
                transform: translateY(-50%);
                background-color: #ff3b30;
                color: white;
                border: none;
                padding: 5px 15px;
                border-radius: 5px;
            }
			.edit-btn{
				position: absolute;
                right: 120px;
                top: 90%;
                transform: translateY(-50%);
                background-color: #193f9f;
                color: white;
                border: none;
                padding: 5px 15px;
                border-radius: 5px;
			}
            
            .add-address-btn {
                background-color: #aec6de;
                border: 2px dashed #6f88a0;
                color: #105795;
                padding: 15px;
                text-align: center;
                border-radius: 8px;
                cursor: pointer;
                transition: all 0.3s ease;
            }
            
            .add-address-btn:hover {
                background-color: #e9ecef;
            }
            
            .address-name {
                font-weight: bold;
                margin-bottom: 5px;
            }
            
            .address-details {
                color: #060e15;
                margin-right: 70px;
            }
        </style>
    </head>
    <body>
        <div class="container py-5">
			<h2 class="mb-4">MY ADDRESSES</h2>
			<% if (userAddress && userAddress.address && userAddress.address.length > 0) { %>
				<!-- Loop through userAddress array -->
				<div class="address-list">
					<% userAddress.address.forEach(address => { %>
						<div class="address-card">
							<h5 class="mb-0"><%=address.addressType%></h5>
							<div class="address-name"><%= address.name %></div>
							<div class="address-details"><p>City: <%= address.city %><br/>
								Land Mark: <%= address.landMark %><br/>
								State: <%= address.state %><br/>
								PIN Code: <%= address.pincode %><br/>
								Phone No.: <%= address.phone %><br/>
								Alternate Phone No.: <%= address.altPhone %><br/></p>

							</div>
							<a href="/editAddress?id=<%=address._id%>"><button class="edit-btn">Edit</button></a>
							<a href="/deleteAddress?id=<%=address._id%>"><button onclick="return confirm('Are you sure you want to delete this address?')"
								class="remove-btn">Remove</button></a>
						</div>
					<% }) %>
				</div>
			<% } else { %>
				<div class="address-card">
					<div class="address-name">No Address Found</div>
					<div class="address-details">Please add an address.</div>
				</div>
			<% } %>
			<div class="add-address-btn mt-4">
				<i class="bi bi-plus-lg"></i> <a href="/add-address">Add New Address</a>
			</div>
		</div>
		
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
        <script>
            // Add click handlers for remove buttons
            document.querySelectorAll('.remove-btn').forEach(button => {
                button.addEventListener('click', function() {
                    this.closest('.address-card').remove();
                });
            });
    
            // Add click handler for add address button
            document.querySelector('.add-address-btn').addEventListener('click', function() {
                alert('Add new address functionality would go here!');
            });
        </script>
