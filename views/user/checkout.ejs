        alert('Please enter a coupon code.');
        return;
    }

    $.ajax({
        url: '/apply-coupon',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ couponCode, cartItems }), 
        success: function(response) {
            if (response.success) {
                $('#couponMessage').text(response.message).css('color', 'green');
                $('#subTotal').text(`₹${response.subTotal}`);
                $('#couponDiscountAmount').text(`-₹${response.couponDiscount}`);
                $('#finalTotal').text(`₹${response.finalTotal}`);
                
                // Show the remove coupon button after applying
                $('#removeCoupon').show();
            } else {
                $('#couponMessage').text(response.message).css('color', 'red');
            }
        },
        error: function() {
            alert('Something went wrong.');
        }
    });
});



$('#removeCoupon').click(function() {
    $.ajax({
        url: '/remove-coupon',
        type: 'POST',
        success: function(response) {
                if (response.success) {
                    $('#couponMessage').text(response.message).css('color', 'green');
                    $('#discount').text('₹0');
                    $('#finalTotal').text(`₹${response.finalTotal}`);
                    $('#removeCoupon').hide(); 
                    $('#appliedCoupon').hide();
                    $('#couponDiscountAmount').text('₹0');
                    $('#couponCode').val('');  // Clears the value
                    $('#couponCode').attr('placeholder', 'Enter your coupon code'); 
                } else {
                    $('#couponMessage').text(response.message).css('color', 'red');
                }
            },
        error: function() {
            alert('Something went wrong.');
        }
    });
});

