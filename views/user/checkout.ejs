/* Checkout Page Styling */
.checkout_area {
    background-color: #f8f9fa;
    padding: 50px 0;
}

.select_address h3 {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
}

/* Colorful Address Section */
.select_address .form-group {
    margin-bottom: 15px;
    border-radius: 8px;
    overflow: hidden;
    background:  #4d666a;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.select_address .form-group:hover {
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
}

.select_address input[type="radio"] {
    margin-right: 10px;
    position: relative;
    top: 2px;
}

.select_address label {
    font-size: 16px;
    line-height: 1.5;
    color: #fff;
    font-weight: bold;
    cursor: pointer;
    display: block;
    padding: 12px;
    text-align: center;
    border-radius: 5px;
    background-color: rgba(0, 0, 0, 0.3);
}

.select_address input[type="radio"]:checked + label {
    background-color: #00bcd4;
    color: #fff;
    border: 2px solid #fff;
}

.select_address label:hover {
    background-color: rgba(0, 0, 0, 0.5);
}

/* Additional Styling for Address Links */
.select_address a {
    font-size: 16px;
    color: #00bcd4;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
}

.select_address a:hover {
    color: #ff4081;
}

/* Order Summary Styling */
.order_box {
    background-color: #fff;
    padding: 30px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

.order_box h2 {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    margin-bottom: 20px;
}

.order_box .list {
    list-style: none;
    padding: 0;
    margin-bottom: 20px;
}

.order_box .list li {
    font-size: 16px;
    margin-bottom: 10px;
    color: #333;
}

.order_box .list .last {
    font-weight: bold;
    color: #00bcd4;
}

.order_box .list_2 {
    list-style: none;
    padding: 0;
}

.order_box .list_2 li {
    font-size: 16px;
    margin-bottom: 10px;
    color: #333;
}

.order_box .payment_item {
    margin-bottom: 20px;
}

.order_box .payment_item .radion_btn input {
    margin-right: 15px;
}

.order_box .payment_item label {
    font-size: 16px;
    color: #333;
}

.order_box .payment_item label i {
    margin-right: 10px;
}

.order_box .primary-btn {
    background-color: #00bcd4;
    color: #fff;
    border: none;
    padding: 12px 25px;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    transition: all 0.3s;
}

.order_box .primary-btn:hover {
    background-color: #0097a7;
}

.payment_item.active label {
    font-weight: bold;
}

/* Footer Styling */
