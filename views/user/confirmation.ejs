        .order_details_table p {
            font-size: 18px;
            color: #2c3e50;
        }
        .order_details_table .btn {
            background-color: #00bcd4;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .order_details_table .btn:hover {
